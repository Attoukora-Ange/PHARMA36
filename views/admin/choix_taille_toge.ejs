<%- include ('../includes/header') %>
<div class="inscription historique_payement">
  <div class="titre_formulaire">MESURE DES TOGES DE TOUTE LA PHARMA36</div>
  <div class="tableau_historique">
      <table>
          <thead>
              <tr>
                  <th>Date</th>
                  <th>Nom - prénom</th>
                  <th>Longueur épaule</th>
                  <th>Longueur manche</th>
                  <th>Longueur robe</th>
              </tr>
          </thead>
          <tbody>
              <% if (TOUS_CHOIX_TOGES) { %>
                <% TOUS_CHOIX_TOGES.forEach(CHAQUE_CHOIX => { %>
                    <tr>
                        <td><%= CHAQUE_CHOIX.date_choix %></td>
                        <td><%= CHAQUE_CHOIX.nom %> <%= CHAQUE_CHOIX.prenom %></td>
                        <td><%= CHAQUE_CHOIX.long_epaule %> cm</td>
                        <td><%= CHAQUE_CHOIX.long_manche %> cm</td>
                        <td><%= CHAQUE_CHOIX.long_robe %> cm</td>
                        <td>
                          <form action="/admin/supprimer_choix_toge" method="post">
                              <input type="hidden" name="id" value="<%=CHAQUE_CHOIX._id %>">
                              <button>Supprimer</button>
                          </form>
                        </td>
                    </tr>
                <% }) %>
              <% } %> 
          </tbody>
      </table>
  </div>
</div>

<%- include ('../includes/footer') %>